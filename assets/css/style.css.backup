    border-radius: 50%;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 16px;
}

.product-meta button:hover,
.product-meta a:hover {
    background: #d82e2e;
    color: white;
    transform: scale(1.1);
}

/*== Products by Category Area Start ==*/
#product-categories-area {
    padding: 100px 0;
    background: white;
}

.large-size-cate,
.small-size-cate {
    height: 100%;
}

.single-cat-item {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    margin-bottom: 20px;
    height: 250px;
}

.category-thumb {
    position: relative;
    height: 100%;
    overflow: hidden;
}

.category-thumb::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.4);
    z-index: 1;
    transition: all 0.3s ease;
}

.single-cat-item:hover .category-thumb::before {
    background: rgba(216,46,46,0.6);
}

.category-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.single-cat-item:hover .category-thumb img {
    transform: scale(1.1);
}

.category-name {
    position: absolute;
    bottom: 30px;
    left: 30px;
    right: 30px;
    z-index: 2;
}

.category-name a {
    color: white;
    font-size: 20px;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.category-name a:hover {
    color: #ffd700;
}

/*== Footer Area Start ==*/
#footer-area {
    background: #1a1a1a;
    color: white;
}

.footer-callto-action {
    padding: 60px 0;
    border-bottom: 1px solid #333;
}

.single-callto-action {
    margin-bottom: 30px;
    padding: 20px;
    background: rgba(255,255,255,0.05);
    border-radius: 10px;
    transition: all 0.3s ease;
}

.single-callto-action:hover {
    background: rgba(216,46,46,0.1);
    transform: translateY(-5px);
}

.callto-thumb img {
    width: 60px;
    height: 60px;
    margin-right: 20px;
    filter: brightness(0) invert(1);
}

.callto-info h2 {
    font-size: 18px;
    color: white;
    margin-bottom: 8px;
    font-weight: 600;
}

.callto-info p {
    color: #ccc;
    margin: 0;
    font-size: 14px;
    line-height: 1.5;
}

.contact-info {
    margin: 25px 0;
}

.contact-info p {
    margin-bottom: 10px;
    font-size: 15px;
}

.contact-info i {
    margin-right: 10px;
    width: 20px;
    color: #d82e2e;
}

.footer-followup-area {
    padding: 60px 0;
    text-align: center;
}

.follow-content-wrap h4 {
    color: white;
    font-size: 28px;
    margin-bottom: 15px;
}

.follow-content-wrap p {
    color: #ccc;
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    font-size: 16px;
    line-height: 1.6;
}

.footer-social-icons {
    margin-bottom: 40px;
}

.footer-social-icons a {
    display: inline-block;
    width: 50px;
    height: 50px;
    background: #333;
    color: white;
    border-radius: 50%;
    margin: 0 8px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    font-size: 18px;
}

.footer-social-icons a:hover {
    background: #d82e2e;
    transform: translateY(-5px);
}

.footer-social-icons a[href*="whatsapp"]:hover {
    background: #25d366;
}

.copyright-area {
    padding: 25px 0;
    border-top: 1px solid #333;
    text-align: center;
}

.copyright-text p {
    color: #ccc;
    margin: 0;
    font-size: 14px;
}

.copyright-text a {
    color: #d82e2e;
    text-decoration: none;
    font-weight: 600;
}

.copyright-text a:hover {
    text-decoration: underline;
}

/*== Search Box Style ==*/
.body-popup-modal-area {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
}

.modal-active-show {
    display: flex !important;
}

.modal-close {
    position: absolute;
    top: 30px;
    right: 30px;
    cursor: pointer;
    z-index: 10000;
}

.search-box-area {
    background: white;
    padding: 50px;
    border-radius: 15px;
    width: 90%;
    max-width: 600px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.3);
}

.search-box-form input {
    width: 100%;
    padding: 20px;
    border: 2px solid #f0f0f0;
    border-radius: 10px;
    font-size: 18px;
    margin-bottom: 20px;
}

.search-box-form input:focus {
    border-color: #d82e2e;
    outline: none;
}

.search-box-form button {
    background: #d82e2e;
    color: white;
    border: none;
    padding: 20px 40px;
    border-radius: 10px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
    width: 100%;
    transition: all 0.3s ease;
}

.search-box-form button:hover {
    background: #b02525;
}

/*== Responsive Styles ==*/
@media (max-width: 1199px) {
    .mega-menu-wrap {
        width: 600px;
        left: -100px;
    }
}

@media (max-width: 991px) {
    .banner-caption h2 {
        font-size: 42px;
    }
    
    .mega-menu-wrap {
        width: 500px;
        left: -150px;
    }
    
    .header-right-meta ul li {
        margin-left: 15px;
    }
    
    .single-carousel-wrap {
        height: 500px;
    }
}

@media (max-width: 767px) {
    .ruby-container {
        padding: 0 20px;
    }
    
    .banner-caption {
        text-align: center;
        padding: 0 30px;
    }
    
    .banner-caption h2 {
        font-size: 32px;
    }
    
    .banner-caption p {
        font-size: 16px;
    }
    
    .single-carousel-wrap {
        height: 400px;
    }
    
    #mainmenu ul {
        flex-direction: column;
        align-items: stretch;
    }
    
    #mainmenu ul li {
        margin: 0;
        text-align: center;
    }
    
    .mega-menu-wrap {
        position: static;
        width: 100%;
        display: block !important;
        box-shadow: none;
        background: #333;
        margin-top: 0;
        border-radius: 0;
    }
    
    .mega-menu-wrap .mega-item-title {
        color: white !important;
    }
    
    .mega-menu-item ul li a {
        color: #ccc !important;
    }
    
    .header-right-meta {
        justify-content: center;
        margin-top: 20px;
    }
    
    .header-right-meta ul {
        justify-content: center;
    }
    
    .header-right-meta ul li {
        margin: 0 10px;
    }
    
    .booking-modal {
        width: 95%;
        margin: 20px;
    }
    
    .booking-modal-body {
        padding: 20px;
    }
    
    .booking-actions {
        flex-direction: column;
    }
    
    .festival-content {
        flex-direction: column;
        gap: 10px;
        padding: 0 20px;
    }
    
    .about-content-wrap h2 {
        font-size: 32px;
    }
    
    .section-title h2 {
        font-size: 32px;
    }
    
    .tab-menu-wrap {
        flex-wrap: wrap;
    }
    
    .tab-menu-wrap .nav-item {
        flex: 1 1 50%;
    }
    
    .tab-content {
        padding: 20px;
    }
}

/*== Utility Classes ==*/
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }
.d-flex { display: flex; }
.align-items-center { align-items: center; }
.justify-content-center { justify-content: center; }
.m-auto { margin: auto; }
.pt-9 { padding-top: 90px; }
.p-9 { padding: 90px 0; }
.img-fluid { max-width: 100%; height: auto; }

/* Bootstrap Grid System */
.container, .ruby-container { max-width: 1200px; margin: 0 auto; padding: 0 15px; }
.row { display: flex; flex-wrap: wrap; margin: 0 -15px; }
.col-3 { flex: 0 0 25%; padding: 0 15px; }
.col-6 { flex: 0 0 50%; padding: 0 15px; }
.col-lg-1 { flex: 0 0 8.333333%; padding: 0 15px; }
.col-lg-2 { flex: 0 0 16.666667%; padding: 0 15px; }
.col-lg-3 { flex: 0 0 25%; padding: 0 15px; }
.col-lg-4 { flex: 0 0 33.333333%; padding: 0 15px; }
.col-lg-6 { flex: 0 0 50%; padding: 0 15px; }
.col-lg-7 { flex: 0 0 58.333333%; padding: 0 15px; }
.col-lg-8 { flex: 0 0 66.666667%; padding: 0 15px; }
.col-lg-9 { flex: 0 0 75%; padding: 0 15px; }
.col-lg-12 { flex: 0 0 100%; padding: 0 15px; }
.col-xl-2 { flex: 0 0 16.666667%; padding: 0 15px; }
.col-xl-8 { flex: 0 0 66.666667%; padding: 0 15px; }
.col-md-6 { flex: 0 0 50%; padding: 0 15px; }

@media (max-width: 991px) {
    .col-lg-1, .col-lg-2, .col-lg-3, .col-lg-4, .col-lg-6, .col-lg-7, .col-lg-8, .col-lg-9, .col-lg-12 {
        flex: 0 0 100%;
    }
}

@media (max-width: 1199px) {
    .col-xl-2, .col-xl-8 {
        flex: 0 0 100%;
    }
}

@media (max-width: 767px) {
    .col-md-6 {
        flex: 0 0 100%;
    }
}
